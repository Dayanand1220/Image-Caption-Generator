# MongoDB Configuration (Optional)
# For local MongoDB: mongodb://localhost:27017/image_caption_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/image_caption_db
MONGO_URI=mongodb://localhost:27017/image_caption_db

# Gemini API Key (Optional but recommended)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Optional: OAuth Configuration (for advanced auth features)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# URLs (adjust for production)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5123